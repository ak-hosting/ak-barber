# AK Barber - E-posta Yapılandırması
# Bu dosyayı .env olarak kopyalayın ve kendi ayarlarınızı yapın

# SMTP Sunucu Ayarları
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# E-posta Hesap Bilgileri
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# E-posta Ayarları
FROM_EMAIL=your-email@gmail.com
FROM_NAME=AK Barber
TO_EMAIL=info@akbarber.com
TO_NAME=AK Barber İletişim

# Gmail App Password Kullanımı
# Gmail için 2FA etkinleştirin ve App Password oluşturun
# https://support.google.com/accounts/answer/185833

# Diğer SMTP Sağlayıcıları
# Outlook/Hotmail: smtp-mail.outlook.com:587
# Yahoo: smtp.mail.yahoo.com:587
# Yandex: smtp.yandex.com:465 (SSL)

# Güvenlik Ayarları
ENABLE_SSL=true
ENABLE_TLS=true

# Form Ayarları
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Spam Koruması
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Bildirim Ayarları
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Geliştirici Bilgileri
DEVELOPER_NAME=a.koc
DEVELOPER_EMAIL=ak@ak-pro.com
DEVELOPER_GITHUB=https://github.com/ak-hosting

# Proje Bilgileri
PROJECT_NAME=AK Barber
PROJECT_VERSION=1.0.0
PROJECT_URL=https://github.com/ak-hosting/ak-barber 